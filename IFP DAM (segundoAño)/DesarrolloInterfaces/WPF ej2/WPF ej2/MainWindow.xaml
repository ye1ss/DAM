<Window x:Class="WPF_ej2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ej2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid OpacityMask="Black">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF71FF00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- <Label x:Name="lbl_etiqueta" Content="Mi primera etiqueta" Foreground="Green" FontFamily="Calibri" FontSize="16"></Label> -->
        <Label Content="Mi segunda etiqueta" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.836,0.529" Width="156" FontSize="16" FontFamily="Arial">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
    </Grid>
</Window>
